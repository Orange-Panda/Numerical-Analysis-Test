<Window x:Class="Aptitude_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aptitude_Test"
        mc:Ignorable="d"
		KeyDown="Window_KeyDown"
        Title="MainWindow" Height="720" Width="1280">
	<Grid Background="#FF191919">
		<TextBlock Text="2+2=4" Style="{ StaticResource Equation }" x:Name="LeftAnswer" HorizontalAlignment="Left"/>
		<TextBlock Text="2+2=4" Style="{ StaticResource Equation }" x:Name="RightAnswer" HorizontalAlignment="Right"/>
		<TextBlock Text="0:30" Style="{ StaticResource Timer }" x:Name="Clock" VerticalAlignment="Top"/>
		<TextBlock Text="Testing" Style="{StaticResource Equation}" x:Name="Console" VerticalAlignment="Bottom"/>
		<Button Content="Start" x:Name="Start" Click="Start_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
	</Grid>
</Window>
